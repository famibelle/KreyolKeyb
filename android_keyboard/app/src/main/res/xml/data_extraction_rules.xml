<?xml version="1.0" encoding="utf-8"?>
<!--
   Sample data extraction rules file; uncomment and customize as necessary.
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include user preferences for keyboard -->
        <include domain="sharedpref" path="kreyol_keyboard_prefs.xml"/>
        
        <!-- Exclude sensitive data -->
        <exclude domain="file" path="private/"/>
        <exclude domain="database" path="temp.db"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow transfer of keyboard settings between devices -->
        <include domain="sharedpref" path="kreyol_keyboard_prefs.xml"/>
        <include domain="file" path="user_dictionary.json"/>
    </device-transfer>
</data-extraction-rules>