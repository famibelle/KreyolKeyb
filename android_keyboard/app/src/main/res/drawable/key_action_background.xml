<?xml version="1.0" encoding="utf-8"?>
<!-- Background pour les touches d'action (Backspace, Enter, Shift) - Style vif -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#FFB84D">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFB84D" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="#DC143C" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#FF8C00" />
        </shape>
    </item>
</ripple>
