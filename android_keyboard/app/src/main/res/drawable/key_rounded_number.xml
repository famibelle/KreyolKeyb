<?xml version="1.0" encoding="utf-8"?>
<!-- Touche arrondie pour les chiffres - Style Guadeloupe -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- État appuyé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#6BB6D6" /> <!-- Bleu lagon plus foncé quand appuyé -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#4682B4" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#87CEEB" /> <!-- Bleu lagon -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#B0E0E6" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
</selector>
