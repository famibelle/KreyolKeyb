<?xml version="1.0" encoding="utf-8"?>
<!-- Touche arrondie pour les actions - Style Guadeloupe -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- État appuyé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#0066CC" /> <!-- Bleu caraïbe plus foncé quand appuyé -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#4169E1" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État activé (pour SHIFT en mode majuscule) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="#32CD32" /> <!-- Vert canne activé -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="2dp" android:color="#228B22" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État sélectionné (pour SHIFT en caps lock) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Jaune soleil pour caps lock -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="2dp" android:color="#FFA500" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0080FF" /> <!-- Bleu caraïbe -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#87CEEB" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
</selector>
