<?xml version="1.0" encoding="utf-8"?>
<!-- Touche arrondie pour l'espace - Style Guadeloupe -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- État appuyé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1E6B1E" /> <!-- Vert canne plus foncé quand appuyé -->
            <corners android:radius="16dp" /> <!-- Coins plus arrondis pour l'espace -->
            <stroke android:width="1dp" android:color="#32CD32" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#228B22" /> <!-- Vert canne -->
            <corners android:radius="16dp" /> <!-- Coins plus arrondis pour l'espace -->
            <stroke android:width="1dp" android:color="#90EE90" />
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp" />
        </shape>
    </item>
    
</selector>
