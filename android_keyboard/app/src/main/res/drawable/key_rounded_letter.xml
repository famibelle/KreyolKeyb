<?xml version="1.0" encoding="utf-8"?>
<!-- Touche arrondie pour les lettres - Style Guadeloupe -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- État appuyé -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6C200" /> <!-- Jaune soleil plus foncé quand appuyé -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#D4AF37" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- État normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFD700" /> <!-- Jaune soleil tropical -->
            <corners android:radius="12dp" /> <!-- Coins arrondis modernes -->
            <stroke android:width="1dp" android:color="#F0E68C" />
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" />
        </shape>
    </item>
    
</selector>
