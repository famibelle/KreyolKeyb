<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← MON KREYÒL"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Niveau actuel -->
        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🏆 NIVEAU: ⭐ DÉBUTANT ⭐"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFC107"
            android:layout_marginBottom="16dp" />

        <!-- Barre de progression -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:max="100"
            android:progress="38"
            android:progressTint="#4CAF50"
            android:progressBackgroundTint="#555555"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="38/100 mots"
            android:textSize="14sp"
            android:textColor="#BBBBBB"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCoverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 1.3% du dictionnaire exploré"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Top 5 Mots -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔥 TOP 5 MOTS"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/topWordsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">
            
            <!-- Les mots seront ajoutés dynamiquement -->
            
        </LinearLayout>

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Statistiques -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📈 STATISTIQUES"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/tvTotalWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ 38 mots différents utilisés"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvTotalUsages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ 67 utilisations totales"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvMastered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ 3 mots maîtrisés (≥5×)"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Ligne de séparation -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#444444"
            android:layout_marginBottom="16dp" />

        <!-- Progression vers prochain niveau -->
        <TextView
            android:id="@+id/tvNextLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🎯 PROGRESSION VERS 🌟 APPRENANT\n   Plus que 62 mots à découvrir!"
            android:textSize="14sp"
            android:textColor="#FFC107"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Boutons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔄 RAFRAÎCHIR"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="❌ FERMER"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5722"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
