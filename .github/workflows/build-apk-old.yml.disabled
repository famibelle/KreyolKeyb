name: 🇸🇷 Build Potomitan Kreyol Keyboard APK & AAB

permissions:
  contents: write
  packages: write

on:
  push:
    branches: [ main ]
    paths:
      - 'android_keyboard/**'
      - '.github/workflows/**'
      - 'Dictionnaries/**'
    tags:
      - 'v*'
  pull_request:
    branches: [ main ]
    paths:
      - 'android_keyboard/**'
      - 'Dictionnaries/**'
  workflow_dispatch:

jobs:
  generate-dictionary:
    name: Generate Kreyòl Dictionary
    runs-on: ubuntu-latest
    
    env:
      HF_TOKEN: ${{ secrets.HF_TOKEN }}
      
    outputs:
      dict-count: ${{ steps.stats.outputs.dict-count }}
      ngrams-count: ${{ steps.stats.outputs.ngrams-count }}

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v4

    - name:  Setup Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'

    - name: 📦 Generate Fresh Kreyòl Dictionary
      run: |
        echo "🔄 Generating fresh Kreyòl dictionary from Hugging Face..."
        echo "🔑 Token configuré: $(if [ -n "$HF_TOKEN" ]; then echo "✅ Oui"; else echo "❌ Non"; fi)"
        
        cd Dictionnaires
        python -m pip install --upgrade pip
        pip install datasets huggingface_hub
        python KreyolComplet.py
        
        # Vérifier que les fichiers ont été générés
        if [ -f "../clavier_creole/assets/creole_dict.json" ] && [ -f "../clavier_creole/assets/creole_ngrams.json" ]; then
          echo "✅ Dictionary files generated successfully"
        else
          echo "❌ Dictionary generation failed"
          exit 1
        fi

    - name: 📊 Extract Statistics
      id: stats
      run: |
        # Utiliser Python pour extraire les statistiques de manière fiable
        cd clavier_creole/assets
        DICT_COUNT=$(python3 -c "import json; data=json.load(open('creole_dict.json')); print(len(data))")
        NGRAMS_COUNT=$(python3 -c "import json; data=json.load(open('creole_ngrams.json')); print(len(data))")
        
        echo "📊 Dictionary: $DICT_COUNT words, $NGRAMS_COUNT N-grams"
        echo "dict-count=$DICT_COUNT" >> $GITHUB_OUTPUT
        echo "ngrams-count=$NGRAMS_COUNT" >> $GITHUB_OUTPUT

    - name: 📤 Upload Dictionary Assets
      uses: actions/upload-artifact@v4
      with:
        name: kreyol-dictionary-assets
        path: |
          clavier_creole/assets/creole_dict.json
          clavier_creole/assets/creole_ngrams.json
        retention-days: 1

  build-debug:
    name: 🔧 Build Debug (APK + AAB)
    runs-on: ubuntu-latest
    needs: generate-dictionary
    
    env:
      KEYSTORE_FILE: potomitan-keystore.jks
      STORE_PASSWORD: ${{ secrets.STORE_PASSWORD }}
      KEY_ALIAS: ${{ secrets.KEY_ALIAS }}
      KEY_PASSWORD: ${{ secrets.KEY_PASSWORD }}

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v4
      
    - name: Setup JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        
    - name: 🔧 Setup Gradle
      uses: gradle/actions/setup-gradle@v3
      with:
        gradle-version: 8.7
        cache-read-only: false

    - name: 📥 Download Dictionary Assets
      uses: actions/download-artifact@v4
      with:
        name: kreyol-dictionary-assets
        path: ./dictionary-temp

    - name: 📋 Copy Dictionary to Android Assets
      run: |
        mkdir -p android_keyboard/app/src/main/assets/
        cp dictionary-temp/creole_dict.json android_keyboard/app/src/main/assets/
        cp dictionary-temp/creole_ngrams.json android_keyboard/app/src/main/assets/
        echo "📊 Dictionary: ${{ needs.generate-dictionary.outputs.dict-count }} words, ${{ needs.generate-dictionary.outputs.ngrams-count }} N-grams"

    - name: Configure Build Scan (Debug)
      run: |
        mkdir -p ~/.gradle
        echo "org.gradle.daemon=false" >> ~/.gradle/gradle.properties
        echo "org.gradle.caching=true" >> ~/.gradle/gradle.properties  
        echo "org.gradle.parallel=true" >> ~/.gradle/gradle.properties
        echo "org.gradle.configureondemand=true" >> ~/.gradle/gradle.properties
        echo "Build Scan® configuré via plugin explicite - publication automatique"

    - name:  Setup Debug Keystore
      run: |
        cd android_keyboard
        echo "${{ secrets.KEYSTORE_BASE64 }}" | base64 --decode > app/potomitan-keystore.jks

    - name: 🧹 Clean project
      run: cd android_keyboard && gradle clean --no-daemon --scan

    - name: 📱 Build Debug APK
      run: cd android_keyboard && gradle assembleDebug --no-daemon --scan

    - name: 📦 Build Debug AAB
      run: cd android_keyboard && gradle bundleDebug --no-daemon --scan

    - name: 📊 Display Build Scan URLs (Debug)
      run: |
        echo "🔍 Build Scan URLs pour les builds Debug:"
        echo "- Les URLs des Build Scans apparaissent dans les logs ci-dessus"
        echo "- Recherchez les lignes contenant 'https://gradle.com/s/'"
        echo "- Ou 'https://scans.gradle.com/s/'"

    - name: 🧹 Cleanup Keystore
      run: rm -f android_keyboard/app/potomitan-keystore.jks

    - name: Upload Debug APK
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-DEBUG-APK
        path: android_keyboard/app/build/outputs/apk/debug/*.apk
        retention-days: 30

    - name: Upload Debug AAB
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-DEBUG-AAB
        path: android_keyboard/app/build/outputs/bundle/debug/*.aab
        retention-days: 30

  build-release:
    name: 🚀 Build Release (APK + AAB)
    runs-on: ubuntu-latest
    needs: generate-dictionary
    
    env:
      KEYSTORE_FILE: potomitan-keystore.jks
      STORE_PASSWORD: ${{ secrets.STORE_PASSWORD }}
      KEY_ALIAS: ${{ secrets.KEY_ALIAS }}
      KEY_PASSWORD: ${{ secrets.KEY_PASSWORD }}

    steps:
    - name: Checkout Repository
      uses: actions/checkout@v4
      
    - name: Setup JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'temurin'
        
    - name: 🔧 Setup Gradle
      uses: gradle/actions/setup-gradle@v3
      with:
        gradle-version: 8.7
        cache-read-only: false

    - name: 📥 Download Dictionary Assets
      uses: actions/download-artifact@v4
      with:
        name: kreyol-dictionary-assets
        path: ./dictionary-temp

    - name: 📋 Copy Dictionary to Android Assets
      run: |
        mkdir -p android_keyboard/app/src/main/assets/
        cp dictionary-temp/creole_dict.json android_keyboard/app/src/main/assets/
        cp dictionary-temp/creole_ngrams.json android_keyboard/app/src/main/assets/
        echo "📊 Dictionary: ${{ needs.generate-dictionary.outputs.dict-count }} words, ${{ needs.generate-dictionary.outputs.ngrams-count }} N-grams"

    - name: 📊 Configure Build Scan (Release)
      run: |
        mkdir -p ~/.gradle
        echo "org.gradle.daemon=false" >> ~/.gradle/gradle.properties
        echo "org.gradle.caching=true" >> ~/.gradle/gradle.properties  
        echo "org.gradle.parallel=true" >> ~/.gradle/gradle.properties
        echo "org.gradle.configureondemand=true" >> ~/.gradle/gradle.properties
        echo "� Build Scan® configuré via plugin explicite - publication automatique"

    - name: 🔐 Setup Release Keystore
      run: |
        cd android_keyboard
        echo "${{ secrets.KEYSTORE_BASE64 }}" | base64 --decode > app/potomitan-keystore.jks

    - name: 🧹 Clean project
      run: cd android_keyboard && gradle clean --no-daemon --scan

    - name: 📱 Build Release APK
      run: cd android_keyboard && gradle assembleRelease --no-daemon --scan

    - name: 📦 Build Release AAB
      run: cd android_keyboard && gradle bundleRelease --no-daemon --scan

    - name: 📊 Display Build Scan URLs (Release)
      run: |
        echo "🔍 Build Scan URLs pour les builds Release:"
        echo "- Les URLs des Build Scans apparaissent dans les logs ci-dessus"
        echo "- Recherchez les lignes contenant 'https://gradle.com/s/'"
        echo "- Ou 'https://scans.gradle.com/s/'"

    - name: 🧹 Cleanup Keystore
      run: rm -f android_keyboard/app/potomitan-keystore.jks

    - name: Upload Release APK
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-RELEASE-APK
        path: android_keyboard/app/build/outputs/apk/release/*.apk
        retention-days: 90

    - name: Upload Release AAB
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-RELEASE-AAB
        path: android_keyboard/app/build/outputs/bundle/release/*.aab
        retention-days: 90
        
    - name: 🔐 Setup Keystore
      run: |
        cd android_keyboard
        echo "${{ secrets.KEYSTORE_BASE64 }}" | base64 --decode > app/potomitan-keystore.jks
        echo "Keystore créé avec succès"
        ls -la app/potomitan-keystore.jks
        
    - name: 🧹 Clean project
      run: cd android_keyboard && gradle clean --no-daemon
        
    - name: 📱 Build Debug APK
      run: cd android_keyboard && gradle assembleDebug --no-daemon
        
    - name: 📱 Build Release APK
      run: cd android_keyboard && gradle assembleRelease --no-daemon
        
    - name: 📦 Build Debug AAB (Android App Bundle)
      run: cd android_keyboard && gradle bundleDebug --no-daemon
        
    - name: 📦 Build Release AAB (Android App Bundle)
      run: cd android_keyboard && gradle bundleRelease --no-daemon
        
    - name: 🧹 Cleanup Keystore
      run: |
        cd android_keyboard
        rm -f app/potomitan-keystore.jks
        echo "Keystore nettoyé pour sécurité"
        
    - name: Upload Debug APK
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-DEBUG
        path: android_keyboard/app/build/outputs/apk/debug/*.apk
        retention-days: 30
        
    - name: Upload Release APK
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-RELEASE
        path: android_keyboard/app/build/outputs/apk/release/*.apk
        retention-days: 90
        
    - name: Upload Debug AAB
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-AAB-DEBUG
        path: android_keyboard/app/build/outputs/bundle/debug/*.aab
        retention-days: 30
        
    - name: Upload Release AAB
      uses: actions/upload-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-AAB-RELEASE
        path: android_keyboard/app/build/outputs/bundle/release/*.aab
        retention-days: 90

  release:
    name: 🚀 Create Release
    runs-on: ubuntu-latest
    needs: [generate-dictionary, build-release]
    if: startsWith(github.ref, 'refs/tags/v')
    
    steps:
    - name: Checkout Repository
      uses: actions/checkout@v4
      
    - name: Download Release APK
      uses: actions/download-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-RELEASE-APK
        path: ./release-apk
        
    - name: Download Release AAB
      uses: actions/download-artifact@v4
      with:
        name: Potomitan-Kreyol-Keyboard-RELEASE-AAB
        path: ./release-aab
        
    - name: Create Release
      uses: softprops/action-gh-release@v1
      with:
        files: |
          ./release-apk/*.apk
          ./release-aab/*.aab
        generate_release_notes: true
        draft: false
        prerelease: false
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}